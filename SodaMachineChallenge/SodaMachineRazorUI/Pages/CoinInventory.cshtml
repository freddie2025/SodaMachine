@page
@model SodaMachineRazorUI.Pages.CoinInventoryModel
@{
    ViewData["Title"] = "CoinInventory";
}


<h1>Coin Inventory</h1>

<div class="row">
    <div class="col-6">
        <table class="table table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coin in Model.Coins)
                {
                    <tr>
                        <td>@coin.Name</td>
                        <td>@coin.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-6">
        <form method="post">
            <input type="hidden" asp-for="CoinToAdd.Name" value="Quarter" />
            <input type="hidden" asp-for="CoinToAdd.Amount" value="0.25" />
            <button type="submit" class="btn btn-primary">Add Quarter to Inventory</button>
        </form>
        <br />
        <form method="post">
            <input type="hidden" asp-for="CoinToAdd.Name" value="Dime" />
            <input type="hidden" asp-for="CoinToAdd.Amount" value="0.10" />
            <button type="submit" class="btn btn-primary">Add Dime to Inventory</button>
        </form>
        <br />
        <form method="post">
            <input type="hidden" asp-for="CoinToAdd.Name" value="Nickle" />
            <input type="hidden" asp-for="CoinToAdd.Amount" value="0.05" />
            <button type="submit" class="btn btn-primary">Add Nickle to Inventory</button>
        </form>
    </div>
</div>